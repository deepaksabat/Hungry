<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @restaurant.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @restaurant.description %>
</p>

<p>
  <strong>Building:</strong>
  <%= @building %>
</p>

<p>
  <strong>Food Style:</strong>
  <%= @foodstyle %>
</p>

<p>
  <strong>Address:</strong>
  <%= @restaurant.address %>
</p>

<p>
  <strong>Phone 1:</strong>
  <%= @restaurant.phone_1 %>
</p>

<p>
  <strong>Phone 2:</strong>
  <%= @restaurant.phone_2 %>
</p>

<p>
  <strong>Picture:</strong>
  <%= @restaurant.picture %>
</p>

<p>
  <strong>Qq:</strong>
  <%= @restaurant.qq %>
</p>

<p>
  <strong>Qr code:</strong>
  <%= @restaurant.qr_code %>
</p>

<p>
  <strong>Minimum order:</strong>
  <%= @restaurant.minimum_order %>
</p>

<p>
  <strong>Delivery charge:</strong>
  <%= @restaurant.delivery_charge %>
</p>

<p>
  <strong>Star rating:</strong>
  <%= @restaurant.star_rating %>
</p>

<p>
  <strong>Is active:</strong>
  <%= @restaurant.is_active %>
</p>

<p>
  <strong>Opening Hours:</strong>
  <table>
    <tr>
      <th>Day</th>
      <th>Start Time</th>
      <th>End Time</th>
    </tr>
    <% @restaurant.opening_hours.each do |opening_hour| %>
      <tr>
        <td><%= Date::DAYNAMES[opening_hour.day] %></td>
        <td><%= opening_hour.start_time.strftime("%l:%M%P") %></td>
        <td><%= opening_hour.end_time.strftime("%l:%M%P") %></td>
      </tr>
    <% end %>
  </table>
</p>

<p>
  <strong>Dishes:</strong>
  <table>
    <tr>
      <th>Name</th>
      <th>Price</th>
    </tr>
    <% @restaurant.dishes.each do |dish| %>
      <tr>
        <td><%= dish.name %></td>
        <td><%= dish.price %></td>
      </tr>
    <% end %>
  </table>
</p>

