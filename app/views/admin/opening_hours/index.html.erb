<p id="notice"><%= notice %></p>

<h1>Listing Opening Hours for <%= @restaurant.name %></h1>

<table border=1 class="standard_table">
  <thead>
    <tr>
      <th>Day</th>
      <th>Start</th>
      <th>End</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @opening_hours.each do |opening_hour| %>
      <tr>
        <td><%= Date::DAYNAMES[opening_hour.day] %></td>
        <td><%= opening_hour.start_time.strftime("%l:%M%P") %></td>
        <td><%= opening_hour.end_time.strftime("%l:%M%P") %></td>
        <td><%= link_to 'Show', admin_restaurant_opening_hour_path(opening_hour.restaurant_id, opening_hour.id) %></td>
        <td><%= link_to 'Edit', edit_admin_restaurant_opening_hour_path(opening_hour.restaurant_id, opening_hour.id) %></td>
        <td><%= link_to 'Destroy', admin_restaurant_opening_hour_path(opening_hour.restaurant_id, opening_hour.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

