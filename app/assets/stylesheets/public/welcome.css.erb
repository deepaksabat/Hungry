/* Site wide styles */
* {margin: 0;}

html, body {
	width: 100%;
	height: 956px;
	font: 10pt "Arial", sans-serif;
	background: url(<%= asset_path 'background_strip.png' %>) repeat-x;
}

div#wrapper {width: 960px; height: 956px; margin: auto;}

div#header {width: 930px; height: 70px; margin: 20px 15px 0 15px;}
div#header_logo {float: left; width: 250px; height: 70px;}
div#header_middle {float: left; width: 260px; height: 50px; padding-top: 20px; text-align: center;}
div#header_menu {float: right; width: 420px; height: 50px; text-align: right; margin-top: 20px;}

div#photo_slide {width: 960px; height: 322px; text-align: center;}

div#content_box {width: 930px; height: 206px; margin: 20px 15px 0 15px; color: #fff; font-family: Verdana;}
div#box_1 {width: 460px; height: 206px; float: left; background: url(<%= asset_path 'homepage_box.png' %>) no-repeat; margin-right: 10px;}
div#box_2 {width: 460px; height: 206px; float: left; background: url(<%= asset_path 'homepage_box.png' %>) no-repeat;}

div#content_box h1 {font-size: 1.6em; text-align: center; margin-bottom: 20px;}
div#content_box p {font-size: 1.2em; padding: 0 20px; font-weight: bold;}

p.box_title {margin: auto; margin-bottom: 10px;}

div#homepage_steps {width: 960px; height: 170px; text-align: center; margin-top: 50px;}

div#footer {width: 960px; height: 93px; margin-top: 20px; font-size: 0.9em; color: #fff; padding-top: 5px;}
div#footer_left {float: left;}
div#footer_right {float: right; text-align: right;}
div#footer_right img {padding-top: 5px;}

a.footer_text:link, a.footer_text:active, a.footer_text:visited {color: #fff; text-decoration: none;}
a.footer_text:hover {text-decoration: underline;}

