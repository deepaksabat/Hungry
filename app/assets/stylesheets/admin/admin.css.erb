 /* Site wide styles */
* {margin: 0;}

html, body {
	width: 100%;
	height: 956px;
	font: 10pt "Arial", sans-serif;
}


ul#admin_menu {
	list-style-type: none;
	display: block;
}

ul#admin_menu li {
	display: block;
	float: left;
	border: 1px solid #000;
	padding: 5px;
	margin-right: 2px;
}

ul#admin_menu li:hover {
	background-color: #f00;
}

ul#admin_menu li a {
	text-decoration: none;
}

ul#admin_menu li a:hover {
	color: #000;
	background-color: #f00;
	text-decoration: none;
}

table.standard_table td {
	padding: 5px;
}